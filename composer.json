{
    "name": "kusabi/date",
    "description": "An extension of PHPs datetime libraries",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^5.7",
        "symfony/var-dumper": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Kusabi\\Date\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kusabi\\Date\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "5.6"
        },
        "platform-dev": {
            "php": "5.6"
        }
    }
}
