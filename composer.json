{
    "name": "kusabi/datetime",
    "description": "An extension of PHPs datetime libraries",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "nesbot/carbon": "*",
        "phan/phan": "*",
        "phpunit/phpunit": "*",
        "phpbench/phpbench": "*",
        "symfony/var-dumper": "*"
    },
    "autoload": {
        "psr-4": {
            "Kusabi\\Date\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kusabi\\Date\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": false
        }
    }
}
